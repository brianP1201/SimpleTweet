<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.DayNight">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/twitter_blue_50</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="counterText" parent="android:style/TextAppearance">
        <item name="android:textColor">#0000FF </item>
    </style>

    <style name="counterOverride" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>
    </style>

    <color name="medium_green">#ff17bf63</color>
    <color name="medium_gray">#ffaab8c2</color>
    <color name="medium_gray_30">#4daab8c2</color>
    <color name="medium_gray_50">#80aab8c2</color>
    <color name="light_gray">#ffccd6dd</color>
    <color name="medium_red">#ffe0245e</color>
    <color name="medium_red_30">#4de0245e</color>
    <color name="medium_red_50">#80e0245e</color>
    <color name="twitter_blue">#ff1da1f2</color>
    <color name="twitter_blue_30">#4d1da1f2</color>
    <color name="twitter_blue_50">#801da1f2</color>

</resources>
